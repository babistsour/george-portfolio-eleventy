<section class="projects" id="projects">
  <h1 class="section__title">
    <span class="yolo">Posterfolio</span>
  </h1>
  <div class="line"></div>
  <div class="figures__container">
    {%- for post in collections.posterfolio | sortByNum -%}
    <a href="{{ post.url }}">
    <div class="figure">

      <div class="description perigrafi">
        <h4 class="post__category">{{post.data.category}}</h4>
        <h3 class="perigrafi">{{ post.data.title }}</h3>
        <p class="perigrafi">{{ post.data.description }}</p>
      </div>
      <figure>
        <img src="{{ post.data.image }}" alt="{{ post.data.imageAlt }}" />
        <figcaption>
          <h3>{{ post.data.title }}</h3>
          <p>{{ post.data.description }}</p>
          <img />
        </figcaption>
      </figure>
    </div>
    </a>
    <div class="line"></div>
    {%- endfor -%}
  </div>
